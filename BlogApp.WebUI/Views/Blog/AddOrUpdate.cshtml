@model Blog
@{
    ViewData["Title"] = "Adit Or Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Adit Or Update Blog</h1>
    <br />


    <form asp-controller="Blog" asp-action="AddOrUpdate" method="post">
        <input type="hidden" asp-for="BlogId" />

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" placeholder="name@example.com">
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Body">Body</label>
            <input asp-for="Body" class="form-control" placeholder="Body">
        </div>


        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" class="form-control" placeholder="Image">
        </div>


        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label" for="gridCheck">
                    <input asp-for="IsApproved" class="form-check-input" />
                    IsApproved
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label" for="gridCheck">
                    <input asp-for="IsHome" class="form-check-input" />
                    IsHome
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label" for="gridCheck">
                    <input asp-for="IsSlider" class="form-check-input" />
                    IsSlider
                </label>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


</div>

